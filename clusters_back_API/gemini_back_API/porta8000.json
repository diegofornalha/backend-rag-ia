{
  "swagger": "2.0",
  "info": {
    "title": "Gemini API",
    "description": "API de integração com Google Gemini",
    "version": "1.0.0"
  },
  "host": "localhost:8000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Monitoramento"],
        "summary": "Health Check",
        "description": "Verifica se a API está funcionando corretamente",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Status da API",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "healthy"
                },
                "service": {
                  "type": "string",
                  "example": "Gemini API"
                },
                "version": {
                  "type": "string",
                  "example": "1.0.0"
                },
                "message": {
                  "type": "string",
                  "example": "Server is running"
                }
              }
            }
          }
        }
      }
    },
    "/gemini/chat": {
      "post": {
        "tags": ["Gemini"],
        "summary": "Chat com Gemini",
        "description": "Envia uma mensagem para o Gemini e recebe uma resposta",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "message",
            "in": "body",
            "description": "Mensagem para o Gemini (máx. 300 caracteres)",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Olá, como você está?"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resposta do Gemini",
            "schema": {
              "type": "object",
              "properties": {
                "response": {
                  "type": "string",
                  "example": "Olá! Estou bem, como posso ajudar?"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Mensagem muito longa. Máximo: 300 caracteres"
                }
              }
            }
          }
        }
      }
    }
  }
}
