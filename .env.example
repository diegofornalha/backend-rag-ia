# Ambiente
ENVIRONMENT=development
DEBUG=false

# API do Gemini
GEMINI_API_KEY=your-api-key-here

# Configurações do Servidor
PORT=10000
HOST=0.0.0.0
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
TIMEOUT=120
KEEPALIVE=65

# Limites e Timeouts
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
GRACEFUL_TIMEOUT=120

# Logging
LOG_LEVEL=info

# SSL
SSL_REDIRECT=false

# Sistema de Embates
EMBEDDINGS_MODEL=text-embedding-ada-002
VECTOR_STORE_TYPE=pgvector
VECTOR_STORE_CONNECTION=postgresql://user:pass@host:5432/dbname
VECTOR_STORE_COLLECTION=embeddings
MAX_TOKENS=8192
CHUNK_SIZE=1000
CHUNK_OVERLAP=200